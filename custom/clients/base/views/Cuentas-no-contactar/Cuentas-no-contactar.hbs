{{#if this.loadView}}

    <style>
        .container {
            overflow-y:auto;
            display:block;
            width: 100%;
        }

        .cuentas {
            display:table;
            width: 90%;
        }

        .cuentasContainer {
            margin-top: 2%;
            overflow-y:auto;
        }

        #containerHeader {
            font-size: 18px;
            margin-top: 2%;
            margin-left: 1%;
            line-height: 10px;
        }

        #successful {
            margin-top: 10%;
            font-size: 25px;
            color: #33800d;
        }
    </style>

    <div class="container tcenter" >
        <h1 id="containerHeader" align="left">Cuentas No contactar</h1>

        <table align="left"  width=100%>
            <tr>
                <th>Asesor: </th>

                <td colspan="2">
                    {{#each meta.panels}}
                        {{#each fields}}
                            {{field ../../this}}
                        {{/each}}
                    {{/each}}
                </td>

                <th> Nombre Cuenta: </th>

                <td colspan="2">
                    <input id="filtroCliente" type="text" value="" style="width: 100%">
                </td>
                <th>Tipo de Cuenta</th>
                <td colspan="2">
                    <select id="tipo_de_cuenta" class="row-fluid select2 tipo_cuenta" multiple="multiple" style="width: 100%" size="3" >
                        {{#each tipo_cuenta}}
                            <option value="{{@key}}">{{this}}</option>
                        {{/each}}
                    </select>
                </td>
                <td><input type="button" value="Buscar" id="btn_Cuentas" class="btn btn-primary" /></td>
            </tr>
            <tr>
                <td colspan="12"><span id='processing' style="display: none"><img width='30' height='5' src='custom/Levementum/images/icon_processing.gif'></span></td>
            </tr>
        </table>
        <br>
        <div style="display: none" id="successful">
            <p>Los Clientes fueron reasignados</p>
        </div>
        <br>


    {{#if cuentas}}
        <div class="cuentasContainer">
            <table class="cuentas" align="center" border="1">
            <tr>
                <th width="10%">NO CONTACTAR</th>
                <th width="10%">TIPO</th>
                <th width="70%">NOMBRE</th>
                <th width="10%">ID</th>
            </tr>
        {{#each cuentas}}
                <tr class='single'>
                    <td>
                    <span sfuuid='880' class='list'>
                          <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'><input type="checkbox" name="selected" value="{{id}}" class="selected" /></span>
                          </div>
                    </span>
                    </td>

                    <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{tipo_registro_c}}</span>
                        </div>
                    </span>
                    </td>


                    <td>
                    <span sfuuid='880' class='list'>
                          <div class='ellipsis_inline' data-placement='bottom'>
                              <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{name}}</span>
                          </div>
                    </span>
                    </td>

                    <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{idcliente_c}}</span>
                        </div>
                    </span>
                    </td>
                </tr>
        {{/each}}
            <tr>
                <td colspan="3"></td>
                <td>
                    <div class="btn-group">
                        <a class="btn fa fa-caret-left" id="previous_offset"></a>
                        <a class="btn disabled" id="offset_value" from_set="" to_set="" total="{{../this.total}}" ></a>
                        <a class="btn fa fa-caret-right" id="next_offset"></a>
                    </div>
                </td>
            </tr>

        </table>
        <br>
        <table class="cuentas" style="background-color:#f7f8f9;" align="center" border="0">
            <tbody>
            <tr>
                <th width="10%"></th>
                <th width="10%"></th>
                <th width="70%"></th>
                <th width="10%"></th>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td>
                    <input type="button" value="Guardar cambios" id="btn_no_contactar" class="btn btn-success">
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    {{/if}}
        <br>
        <!-- Subir CSV -->
        <div style="width:100%; margin:0 auto;" align="center">
            <div style="border: 1px solid;border-color:#22608c;border-radius: 5px;width: 90%;">
                <p style="text-align:left;padding:10px">Actualizaci√≥n Masiva</p>


                <table class="cuentas" style="background-color:#f7f8f9;" align="center" border="0">
                    <tbody>
                    <tr>
                        <th width="10%"></th>
                        <th width="10%"></th>
                        <th width="70%"></th>
                        <th width="10%"></th>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <input type="file" name="pdfNoticias" style="margin:8px" accept=".pdf" class="adjunto">
                        </td>
                        <td>
                            <input type="button" value="Subir cambios" id="btn_no_contactar" class="btn btn-success" align="right">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{/if}}