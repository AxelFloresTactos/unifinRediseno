<style>
    .container {
        overflow-y: auto;
        display: block;
        width: 100%;
    }

    .cuentasContainer {
        margin-top: 1%;
        overflow-y: auto;
        height: 300px;
    }

    #containerHeader {
        font-size: 18px;
        margin-top: 2%;
        margin-left: 1%;
        line-height: 10px;
    }

    #successful {
        margin-top: 10%;
        font-size: 25px;
        color: #33800d;
    }

    .table td {
        text-align: center;   
    }

    .table th {
        text-align: center;   
    }
</style>


<div class="container">
    <h1 id="containerHeader" align="left" style="color:#22608c"><b>Registro masivo de llamada</b></h1>
    <hr margin: 5px>
    <div class="row-fluid">
        <div
            style="color: #e2efe2;background-color:#22608c;border-color:#22608c;border-radius: 10px;margin-left:15px;margin-right:15px;height: 35px;display: table;width: 96%;">
            <h1>
                <p style="vertical-align: middle;  margin: 5px;">
                    Información de llamada
                </p>
            </h1>
        </div>
    </div>
    <div class="record row-fluid panel_body">
        <div class="span2 record-cell">
            <div class="record-label">&nbsp;</div>
            <span>
                <span>
                    &nbsp;
                </span>
            </span>
        </div>
        <div class="span4 record-cell">
            <div class="record-label">Asunto de llamada</div>
            <span>
                <span>
                    <input id="asuntoLlamada" type="text" value="">
                    <p class="help-block"></p>
                </span>
            </span>
        </div>

        <div class="span4 record-cell">
            <div class="record-label">Nombre KAM</div>
            <span>
                <span>
                    <input id="nombreKam" type="text" value="{{userName}}" disabled>
                    <p class="help-block"></p>
                </span>
            </span>
        </div>

        <div class="span2 record-cell">
            <div class="record-label">&nbsp;</div>
            <span>
                <span>
                    &nbsp;
                </span>
            </span>
        </div>

    </div>

    <div class="record row-fluid">
        <div class="span2 record-cell">
            <div class="record-label">&nbsp;</div>
            <span>
                <span>
                    &nbsp;
                </span>
            </span>
        </div>
        <div class="span2">
            <div class="row-fluid">
                <div class="span6 record-cell">
                    <div class="record-label">Fecha de inicio</div>
                    <input type="date" class="dateInicio span12 newItem" placeholder="mm-dd-yyyy" rel="datepicker" value="{{min_date}}" min="{{min_date}}">
                </div>
                <div class="span6 record-cell">
                    <div class="record-label">Hora de inicio</div>
                    <input type="text" class="newTime1 span12 newItem" placeholder="hh:mm" id="horaInicio" rel="timepicker" value=''>
                </div>
            </div>
        </div>

        <div class="span2">
            <div class="row-fluid">
                <div class="span6 record-cell">
                    <div class="record-label">Fecha de fin</div>
                    <input type="date" class="dateFin span12 newItem" placeholder="mm-dd-yyyy" rel="datepicker" value="{{min_date}}" min="{{min_date}}">
                </div>
                <div class="span6 record-cell">
                    <div class="record-label">Hora de fin</div>
                    <input type="text" class="newTime2 span12 newItem" placeholder="hh:mm" id="horaFin" rel="timepicker" value=''>
                </div>
            </div>
        </div>

        <div class="span4 record-cell">
            <div class="record-label">Resultado de llamada</div>
            <span>
                <span>
                    <select class="select2" id="resultadoLlamada" style="width: 100%;">
                        {{#each resultado_list}}
                        <option value="{{@key}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <p class="help-block"></p>
                </span>
            </span>
        </div>

        <div class="span2 record-cell">
            <div class="record-label">&nbsp;</div>
            <span>
                <span>
                    <button class="btn btn-primary" id="btnRegistrar" type="button">Registrar<img id='processing'
                            style="display: none;" width="15" height="5"
                            src="custom/Levementum/images/icon_processing.gif"></button>
                </span>
            </span>
        </div>

    </div>

    <div style="display: none" id="successful">
        <p style="text-align: center;">La llamada se ha registrado correctamente</p>
    </div>
    <br>
    <div class="cuentasContainer">
        <table class="table table-striped" align="center" border="1" style="width:90%">
            {{#if recordsPO}}
            <tr>
                <th width="10%"><input type="button" value="Seleccionar Todo" id="btn_STodo" class="btn btn-primary" btnState="Off" /></th>
                <th width="50%">Nombre</th>
                <th width="10%">Regimen Fiscal</th>
                <th width="10%">Estatus</th>
                <th width="10%">Telefono</th>
                <th width="10%">Correo Electrónico</th>
                <th width="10%">Asignado a</th>
            </tr>
            {{#each recordsPO}}
            <tr class='single'>
                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span>
                                <input type="checkbox" name="selected" value="{{id}}" class="selected" />
                            </span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <a href="#Prospects/{{id}}" target="_blank">{{name}}</a>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>
                                {{getUnifinListValue 'regimen_fiscal_list' regimen_fiscal_c}}
                            </span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>
                                {{getUnifinListValue 'estatus_po_list' estatus_po_c}}
                            </span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span
                                style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{phone_mobile}}</span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{email1}}</span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <a href="#Employees/{{assigned_user_id}}" target="_blank">{{assigned_user_name}}</a>
                        </div>
                    </span>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div>
        <p></p>
    </div>
    {{/if}}
    <textarea style="display: none" id="crossSeleccionados" value=""></textarea>
    <br>
</div>