<style>
    .notificationsContainer {
        padding-top: 5%;
        overflow-y: auto;
        width: 100%;
        height: 300px;
    }

    #enviar {
        margin-top: 10%;
    }

    #cancelarDrawer {
        margin-top: 10%;
    }

    #title {
        font-weight: bold !important;;
    }

    .bodyTable {
        padding-top: 5px;
        overflow-y: auto;
        width: 50%;
        height: 180px;
        padding-left: 25%;

    }
</style>

<div class="container-fluid" >

    <div style=" padding-left: 25%; padding-right: 25%;  height: 100px; display: flex;
  align-items: center;">
        <font size="3">Los campos requeridos para {{relatedAcctName}} en relaciones
            activas {{relaciones_activas}}, son los siguientes: </font>
    </div>
    <div class="bodyTable">
        <table>
            {{#each camposFaltantes}}
                <tr>
                    <td>
                        <font size="4"><b>{{this}}</b></font>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
    <div class="container-fluid" style="padding-left: 30%; display: inline-block">
        <a id="enviar" class="btn btn-success" href="#Accounts/{{relatedAcct}}" target="_blank">Ir a Persona
            Relacionada</a>
        <input type="button" class="btn btn-danger" value="Cancelar" id="cancelarDrawer"/>
    </div>

</div>
