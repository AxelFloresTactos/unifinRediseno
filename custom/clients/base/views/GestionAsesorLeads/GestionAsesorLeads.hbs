{{#if this.loadView}}
    <style>
        .container {
            overflow-y: auto;
            display: block;
            width: 100%;
        }
        .cuentas {
            display: table;
            width: 90%;
        }
        .cuentasContainer {
            margin-top: 1%;
            overflow-y: auto;
            height: 300px;
        }
        #containerHeader {
            font-size: 18px;
            margin-top: 2%;
            margin-left: 1%;
            line-height: 10px;
        }
        #successful {
            margin-top: 10%;
            font-size: 25px;
            color: #33800d;
        }
    </style>
	<script>
		var $select2 = this.$('.cuentasContainer').find('select.select2');
		$select2.select2();

        this.$('[data-field="posicion_operativa"].updatePO').select2({
            width:'100%',
            minimumResultsForSearch:7,
            closeOnSelect: false,
            containerCssClass: 'select2-choices-pills-close'
        });

	</script>
	<div><p></p></div>
    <div class="container">
        <div class="row-fluid">
            <div style="color: #e2efe2;background-color:#22608c;border-color:#22608c;border-radius: 10px;margin-left:15px;margin-right:15px;height: 35px;display: table;width: 96%;">
                <h1>
                    <p style="vertical-align: middle;  margin: 5px;">
						Gestión de asignación LM
                    </p>
                </h1>
            </div>
        </div>
        <div class="record row-fluid panel_body">
            <div class="span3 record-cell">
                <div class="record-label">Posición Operativa</div>
                <span>
                    <span>
                      <select class="span11" id="PosicionOperativa">
                          {{#each lista_posicion_operativa}}
                              <option value="{{@key}}" {{ifSelected @key ../filtros.PosicionOperativa}}>{{this}}</option>
                          {{/each}}
                      </select>
					            <p class="help-block"></p>
                    </span>
                </span>
            </div>
            <div class="span3 record-cell">
                <div class="record-label">Producto</div>
                <span>
                    <span>
                    <select class="span11" id="Producto">
                        {{#each lista_producto}}
                            <option value="{{@key}}" {{ifSelected @key ../filtros.Producto}}>{{this}}</option>
                        {{/each}}
                    </select>
					               <p class="help-block"></p>
                    </span>
                </span>
            </div>
            <div class="span1 record-cell">
                <div></div>
                <span>
                    <span>
						<h1>Usuario</h1>
                    </span>
                </span>
            </div>
            <div class="span2 record-cell">
                <div class="record-label">Nombre</div>
                <span>
                    <span>
                        <input id="AgenteN" type="text" value="{{filtros.Nombre}}">
                        <p class="help-block"></p>
                    </span>
                </span>
            </div>
            <div class="span2 record-cell">
                <div class="record-label">Apellido</div>
                <span>
                    <span>
						<input id="AgenteA" type="text" value="{{filtros.Apellidos}}">
                        <p class="help-block"></p>
                    </span>
                </span>
            </div>
            <div class="span1 record-cell" style="margin-left:0px;">
                <div class="record-label">&nbsp;</div>
                <span>
                    <span>
                        <button class="btn btn-primary" id="btn_Buscar" type="button">Buscar<img
                                        id='processing' style="display: none;" width="15" height="5"
                                        src="custom/Levementum/images/icon_processing.gif"></button>
                    </span>
                </span>
            </div>
        </div>
		{{#if listausuarios}}
			<div class="row-fluid">
				<table class="table">
					<tr>
						<td class="span3">
							<label class="record-label" style="font-weight:bold">USUARIO</label>
						</td>
						<td class="span2">
							<label class="record-label" style="font-weight:bold">PUESTO</label>
						</td>
						<td class="span2">
							<label class="record-label" style="font-weight:bold">EQUIPO</label>
						</td>
            <td class="span3">
							<label class="record-label" style="font-weight:bold">POSICIÓN OPERATIVA</label>
						</td>
            <td class="span2">
							<label class="record-label" style="font-weight:bold">LÍMITE MÁXIMO</label>
						</td>
					</tr>
				</table>
			</div>
			<div class="cuentasContainer row-fluid">
			  <table class="table table-striped tablavet">
				{{#each listausuarios}}
					<tr>
						<td class="span3">
							<span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{nombre_completo_c}}</span>
						</td>
            <td class="span2">
              <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'> {{getUnifinListValue 'puestousuario_c_list' puestousuario_c}} </span>
            </td>
            <td class="span2">
              <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'> {{getUnifinListValue 'equipo_list' equipo_c}} </span>
            </td>
            <td class="span3">
							<select class="posicion_operativa select2 updatePO" multiple="multiple" style="width: 100%;" data-field="posicion_operativa">
								{{#each ../lista_posicion_operativa}}
									<option value="{{@key}}" {{ifMSelected @key ../posicion_operativa_c}}>{{this}}</option>
								{{/each}}
							</select>
						</td>
            <td class="span2">
							<input type="text" class="limite_max updateL" placeholder="Límite máximo" value="{{limite_asignacion_lm_c}}" style="width:100%" data-field="limite_asignacion_lm_c"/>
						</td>
					</tr>
				{{/each}}
			  </table>
			</div>
			<div><p></p></div>
      <table>
				<br>
				<tr>
					<th>Total de registros encontrados: {{filtros.Total}}</th>
          <td align="center"><input type="button" value="Guardar cambios" id="btn_guardar" class="btn btn-success" /></td>
					<td></td>
        </tr>
			</table>
		{{else}}
			<div class="row-fluid hide notFound" style="color:gray;">
				<div class="span12"><center>No se han encontrado registros</center></div>
			</div>
		{{/if}}
		<textarea style="display: none" id="crossSeleccionados" value=""></textarea>
    </div>
{{/if}}
