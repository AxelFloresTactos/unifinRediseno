<!-- Modal Busquéda de Código Postal -->
<div id="modalCheckCP" class="row-fluid" style="display:none">
  <div class="modal span12" style="width:100%;height:800px">
    <!-- Modal content -->
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <!--<span class="close closemodalCheckCP">&times;</span>-->
        <h3>&nbsp;&nbsp;Alta Sepomex</h3>
      </div>
        <!-- Modal body -->
        <div class="modal-body">
          <div class="row-fluid">
                <div class="span4"> </div>
                <div class="span4">
                  <div class="row-fluid" style="margin-top:5px">
                      <div class="record-label">Código Postal</div>
                        <span>
                            <input id="codigoPostal" type="text" value="">
                            <p class="help-block"></p>
                        </span>
                    </div>
                </div>
                <div class="span4"> </div>
          </div>
          <div class="row-fluid">
              <div class="span6" style="text-align:center">
                  <div class="record-label">Nacional</div>
                      <input id="checkNacional" class="checkNacExt" type="checkbox" checked>
                      <p class="help-block"></p>
              </div>
              <div class="span6" style="text-align:center">
                  <div class="record-label">Extranjero</div>
                      <input id="checkExtranjero" class="checkNacExt" type="checkbox">
                      <p class="help-block"></p>
              </div>
            </div>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary cancelCheckCP" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary continueCheckCP">Continuar
                <img id="processingCheckCP" style="display: none;" width="15" height="5" src="custom/Levementum/images/icon_processing.gif">
            </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Registro Registro -->
<div id="modalRecord" class="row-fluid" style="display:none">
  <div class="modal span12" style="width:100%;height:800px">
    <!-- Modal content -->
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <!--<span class="close closemodalCheckCP">&times;</span>-->
        <h3>&nbsp;&nbsp;Alta Sepomex</h3>
      </div>
        <!-- Modal body -->
        <div class="modal-body" style="height:220px">
            <div class="row-fluid" style="margin-top:10px">
              <div class="span6" style="text-align:center">
                  <div class="record-label">Código Postal</div>
                  <input id="codigoPostalSave" class="formField" type="text" {{#if isNational}}disabled{{/if}} value={{cpValue}}>
                  <p class="help-block"></p>
              </div>
              <div class="span6" style="text-align:center">
                  <div class="record-label">País</div>
                  {{#if isNational}}
                  <input id="paisRecord" class="formField" type="text" disabled data-id="{{paisId}}" value="{{paisName}}">
                  <p class="help-block"></p>
                  {{else}}
                  <select class="row-fluid select2 selectPais" id="pais" data-field="pais">
                      {{#each paises_list}}
                      <option value="{{@key}}">{{this}}</option>
                      {{/each}}
                  </select>
                  {{/if}}
              </div>
            </div>

            <div class="row-fluid" style="margin-top:10px">
              <div class="span6" style="text-align:center">
                  <div class="record-label">Estado</div>
                  {{#if isNational}}
                  <select class="row-fluid select2 selectEstado" id="estado" data-field="estado">
                      {{#each estados_list}}
                      <option value="{{@key}}">{{this}}</option>
                      {{/each}}
                  </select>
                  {{else}}
                  <input id="estado" class="formField" type="text" value="">
                  <p class="help-block"></p>
                  {{/if}}
              </div>
              <div class="span6" style="text-align:center">
                  <div class="record-label">Ciudad</div>
                  {{#if isNational}}
                  <select class="row-fluid select2 selectCiudad" id="ciudad" data-field="ciudad">
                      {{#each ciudades_list}}
                      <option value="{{@key}}">{{this}}</option>
                      {{/each}}
                  </select>
                  {{else}}
                  <input id="ciudad" class="formField" type="text" value="">
                  <p class="help-block"></p>
                  {{/if}}
              </div>
            </div>

            <div class="row-fluid" style="margin-top:10px">
              <div class="span6" style="text-align:center">
                  <div class="record-label">Municipio</div>
                  {{#if isNational}}
                  <select class="row-fluid select2 selectMunicipio" id="municipio" data-field="municipio">
                      {{#each municipios_list}}
                      <option value="{{@key}}">{{this}}</option>
                      {{/each}}
                  </select>
                  {{else}}
                  <input id="municipio" class="formField" type="text" value="">
                  <p class="help-block"></p>
                  {{/if}}
              </div>
              <div class="span6" style="text-align:center">
                  <div class="record-label">Colonia</div>
                  <input id="colonia" class="formField" type="text" value="">
                  <p class="help-block"></p>
              </div>
            </div>
        </div> <!-- Modal body -->
        <!-- Modal footer -->
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary cancelSaveRecord" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary saveRecordCP">Guardar
                <img id="processingSaveCheckCP" style="display: none;" width="15" height="5" src="custom/Levementum/images/icon_processing.gif">
            </button>
        </div>
      </div>
    </div>
  </div>
</div>