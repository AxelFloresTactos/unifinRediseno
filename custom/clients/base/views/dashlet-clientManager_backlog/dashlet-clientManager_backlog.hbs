
<style>

    table{
        align : left;
    }

    #datos {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        border: 2px solid;
		/*Lo siguiente es para los bordes*/
        border-collapse: collapse;
        align : left;
    }

    #datos td {
        padding: 10px;
        text-align: center;
        font-size: 10px;
        border: 1px solid;
        border-color: gray;
    }

    #datos #titulo td {
        padding-top: 5px;
        padding-bottom: 5px;
        text-align: center;
        background-color: #E7E9EB;;
        color: black;
        font-size: 12px;
    }

    #datos th {
        padding-top: 8px;
        padding-bottom: 8px;
        text-align: center;
        background-color: #021741;
        color: white;
    }

</style>

<div data-dashlet="dashlet" class="dashlet-content">
<br>
{{#each dataTotal}}
<table class="table table-striped" id = "datos" align="left"  style="overflow-x: scroll;">
    <thead id = "titulo">
        <tr>
            <th width = "500px"><b>Equipo : {{equipo}}</b></th>
        </tr>
        <tr>
            <td colspan="3"><b>En proceso</b></td>
            <td colspan="3"><b>Autorizado</b></td>
            <td colspan="3"> </td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th width = "12%"><b>Prospecto</b></th>
            <th width = "12%"><b>Cr√©dito</b></th>
            <th width = "12%"><b>Rechazada</b></th>
            <th width = "12%"><b>Sin SC</b></th>
            <th width = "12%"><b>Con SC</b></th>
            <th width = "12%"><b>Total</b></th>
            <th width = "14%"><b>Total</b></th>
            <th width = "14%"><b># Clientes</b></th>
        </tr>
        <tr>
            <td>$ {{customFormatNumber prospecto}}</td>
            <td>$ {{customFormatNumber credito}}</td>
            <td>$ {{customFormatNumber rechazada}}</td>
            <td >$ {{customFormatNumber sinsc}}</td>
            <td >$ {{customFormatNumber consc}}</a></td>
            <td >$ {{customFormatNumber total}}</td>
            <td >$ {{customFormatNumber montoTotal}}</td>
            <td >{{conteoTotal}}</td>
        </tr>
    </tbody>
</table>
<br>
{{/each}}
</div>
