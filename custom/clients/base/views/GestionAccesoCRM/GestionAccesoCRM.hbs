        background-color: #22608c;
    }

    .SetHorario td {
        padding: 5px;
        /*width: 75px;*/
        background-color: #f6f8f9;
    }

    .modal {
        position: fixed;
        top: 9%;
        left: 17%;
        z-index: 1050;
        width: 560px;
        margin-left: -280px;
        background-color: rgba(111, 112, 113, 0.67);
        background-clip: padding-box;
        outline: none;
    }

    select {
        width: 75px;
        border: 1px solid #f6f6f6;
        background-color: #fff;
    }

    .dia {
        background: #1a74c2;
        color: white;

    }

    .close {
        float: right;
        font-size: 30px;
        font-weight: bold;
        line-height: 18px;
        color: rgb(255, 0, 11);
        text-shadow: rgb(255 255 255) 0px 1px 0px;
        opacity: unset;
    }

    #checkboxes label {
        display: inline-flex;
        padding: 5px;
    }

    [data-tip] {
        position: relative;

    }

    [data-tip]:before {
        content: '';
        /* hides the tooltip when not hovered */
        display: none;
        content: '';
        border-left: 5px solid transparent;
        border-right: 5px solid transparent;
        border-bottom: 5px solid #8e8e8e;
        position: absolute;
        top: 30px;
        left: 35px;
        z-index: 8;
        font-size: 0;
        line-height: 0;
        width: 0;
        height: 0;
    }

    [data-tip]:after {
        display: none;
        content: attr(data-tip);
        position: absolute;
        top: 35px;
        left: 0px;
        padding: 5px 8px;
        background: #8e8e8e;
        color: #fff;
        z-index: 9;
        font-size: 0.75em;
        height: 18px;
        line-height: 18px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
        white-space: nowrap;
        word-wrap: normal;
    }

    [data-tip]:hover:before,
    [data-tip]:hover:after {
        display: block;
    }

    .form-control {
        width: 115px;
    }

</style>

