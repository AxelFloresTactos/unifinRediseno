<div class="welcome" style="background-image: url(custom/include/images/back_NuevoLogo.jpg); background-size: cover; width: 100%;
    background-repeat: round;">
    <div class="thumbnail login">
        <div class="tcenter">
            <h2 class="brand"><img src="{{logoUrl}}" alt="SugarCRM"></h2>
        </div>
        <div name="loginSection">
        <form name='{{name}}' class="tcenter">
            {{#if externalLoginForm}}
                <p>&nbsp;</p>
                <p class="wide">
                    <a class="btn btn-block btn-primary {{#unless externalLoginUrl}}disabled{{/unless}}" name="external_login_button" title="{{str "LBL_LOGIN_BUTTON_LABEL"}}">{{str "LBL_LOGIN_BUTTON_LABEL"}}</a>
                </p>
                <p class="wide">
                    <a class="btn btn-link btn-invisible" name="login_form_button" title="{{str "LBL_LOGIN_FORM_LABEL"}}">{{str "LBL_LOGIN_FORM_LABEL"}}</a>
                </p>
            {{else}}
                {{#each meta.panels}}
                    {{#each fields}}
                        <div class="control-group">{{field ../../this model=../../model}}</div>
                    {{/each}}
                    <p class="help-block">
                        {{#if ../showPasswordReset}}
                            <a href="#forgotpassword" class="btn btn-link btn-invisible">{{str "LBL_LOGIN_FORGOT_PASSWORD"}}</a>
                        {{/if}}
                    </p>
                {{/each}}
                <div class="login-footer">
                    {{#each meta.buttons}}
                        {{field ../this model=../model}}
                    {{/each}}
                </div>
            {{/if}}
        </form>
        </div>
        <div name="mfaSection">
          <div class="tcenter">
            <h4 class="brand">Ingresa el código de verificación:</h4>
          </div>
          <form name="mfa" class="tcenter">
            <div>
              <span>
                <input type="text" name="mfaCode" value="" placeholder="Código de verificación" class="inherit-width" aria-label="mfaCode">
              </span>
              <div id="mfa_contador"> -- </div>
            </div>
            <div class="login-footer">
              <a class="btn btn-primary" name="cstm_mfa_form_button" title="Continuar">Continuar</a>
              <a class="btn btn-primary hide" name="mfa_new_code_button" title="Nuevo Código">Nuevo Código</a>
            </div>
          </form>
        </div>
    </div>
</div>
