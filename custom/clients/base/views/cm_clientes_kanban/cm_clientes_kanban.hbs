                        </div>
                        <div class="nombre">
                            <p data-id="{{Id}}" title="{{Nombre}}">
                                <a href="#{{Modulo}}/{{Id}}" target="_blank">{{Nombre}}</a>
                            </p>
                        </div>
                    </div>
                    <i class="fa fa-star" data-id="{{Id}}" data-modulo="{{Modulo}}" data-columna="Cliente_Activo" {{#if Favorito}}style="color: #3399FF"{{/if}}></i>
                    <div class="cuadrado">
                        <p>{{Dias_Etapa}}</p>
                    </div>
                </div>
                <div class="contenedor-detalles">
                    <div>
                        <p>&nbsp;</p>
                    </div>
                    <div>
                        <p><span>$</span>{{Monto_Cuenta}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="perdido-items border-right">
        {{#each registrosKanbanClientes.Cliente_Perdido.Registros}}
            <div class="contenedor-item" data-tipo="{{Subtipo_Registro}}">
                <div class="anexo">
                    <p>&nbsp;</p>
                </div>
                <div class="contenedor-informacion">
                    <div class="contenedor-nombre">
                        <div class="circulo">
                            <p>UA</p>
                        </div>
                        <div class="nombre">
                            <p data-id="{{Id}}" title="{{Nombre}}">
                                <a href="#{{Modulo}}/{{Id}}" target="_blank">{{Nombre}}</a>
                            </p>
                        </div>
                    </div>
                    <i class="fa fa-star" data-id="{{Id}}" data-modulo="{{Modulo}}" data-columna="Cliente_Perdido" {{#if Favorito}}style="color: #3399FF"{{/if}}></i>
                    <div class="cuadrado">
                        <p>{{Dias_Etapa}}</p>
                    </div>
                </div>
                <div class="contenedor-detalles">
                    <div>
                        <p>&nbsp;</p>
                    </div>
                    <div>
                        <p><span>$</span>{{Monto_Cuenta}}</p>
                    </div>
