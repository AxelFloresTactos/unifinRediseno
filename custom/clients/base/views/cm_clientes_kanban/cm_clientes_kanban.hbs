<link rel="stylesheet" href="custom/clients/base/views/cm_clientes_kanban/styles/styles.css">
<div class="contenedor-grid">
    <div class="contenedor-conLinea color-white">
        <div class="contenedor-header">
        <div class="header-column">
                <h5>Cliente con LÃ­nea sin Operar</h5>
                <img src="custom/include/images/Contacto_icon.png" alt="">
            </div>
            <div class="header-datos">
                <div>
                    <p>{{registrosKanbanClientes.Cliente_Linea_Sin_Operar.Total_Registros}} Registro(s)</p>
                </div>
                <div class="cantidad-conLinea contenedor-cantidad">
                    <p><span>$</span>{{registrosKanbanClientes.Cliente_Linea_Sin_Operar.Total_Monto}}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="contenedor-activo color-white">
        <div class="contenedor-header">
            <div class="header-column">
                <h5>Cliente Activo</h5>
                <img src="custom/include/images/Contacto_icon.png" alt="">
            </div>
            <div class="header-datos">
               <div>
                    <p>{{registrosKanbanClientes.Cliente_Activo.Total_Registros}} Registro(s)</p>
                </div>
                <div class="contenedor-cantidad cantidad-activo">
                    <p><span>$</span>{{registrosKanbanClientes.Cliente_Activo.Total_Monto}}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="contenedor-perdido color-white">
        <div class="contenedor-header">
            <div class="header-column">
                <h5>Cliente Perdido</h5>
                <img src="custom/include/images/Contacto_icon.png" alt="">
