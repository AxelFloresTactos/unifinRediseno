
<style>
 
  div.ex1 {
    margin: auto;
  }

  #contenido{
    /*border: 3px solid rgb(11, 11, 11);*/
    text-align: center;
    font-size: 12px;
    width: 100%;
    }

  #intercont{
    padding: 5px;
  }

  #registros table{
    min-width: 850px;
    border: 1px solid #e9e9e9;
  }

  #registros td { 
      padding: 5px 10px;
      text-align: left;
      border: 1px solid #e9e9e9;
  }

  td.nombre{
    overflow-x:auto; 
    width:400px;
  }
  /* The Modal (background) */
  .btn-Guardar {
        line-height: 18px;
        text-align: center;
        display: inline-block;
        margin-top: 2px;
        font-size: 12px;
    }

  .sinborde { /*Table without border*/
  border: 0;
  }

  .modalDashlet {
      /*position: absolute;*/
      padding-top: 30px; /* Location of the box */
      padding-bottom: 30px;
      top: 0;
      left:0;
      /* width: 100%; /* Full width */
      /*height: 100%; /* Full height */
      overflow: auto; /* Enable scroll if needed */
      background-color: rgb(0,0,0); /* Fallback color */
      background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
      min-width: 350px;
  }

  /* Modal Content */
  .modal-content {
      position: relative;
      background-color: #fefefe;
      margin: auto;
      padding: 1px;
      border: 1px solid #888;
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
      -webkit-animation-name: animatetop;
      -webkit-animation-duration: 0.4s;
      animation-name: animatetop;
      animation-duration: 0.4s;
  }

  /* Add Animation */
  @-webkit-keyframes animatetop {
      from {top:-300px; opacity:0}
      to {top:0; opacity:1}
  }

  @keyframes animatetop {
      from {top:-300px; opacity:0}
      to {top:0; opacity:1}
  }

  /* The Close Button */
  .close {
      color: white;
      float: right;
      font-size: 28px;
      font-weight: bold;
  }

  .close:hover,
  .close:focus {
      color: #000;
      text-decoration: none;
      cursor: pointer;
  }

  .modal-header {
      padding: .5px 0px;
      background-color: #21618C;
      color: white;
  }

  .modal-body {
    padding: .5px 0px;
    font-size: 12px;
    text-align: center;
  }

  .modal-footer {
      padding: 2px 16px;
      background-color: #21618C;
      color: #ffffff;
      font-size: 12px;
      text-align: center;
  }

  .pointer {cursor: pointer;}

  tr.border_ td {
  	border: 1px solid #e9e9e9;
}

.table-fixed{
  width: 100%;
  min-width: 300px;
  background-color: #f3f3f3;
  tbody{
    height:200px;
    overflow:auto;
    width: 100%;
    }
  thead,tbody,tr,td,th{
    display:block;
  }
  tbody{
    td{
      float:left;
    }
  }
  thead {
    tr{
      th{
        float:left;
       background-color: #f39c12;
       border-color:#e67e22;
      }
    }
  }
}
</style>

<div class="ex1">
  <table>
    {{#if viewEnable}}
    <tr>
      <td>  
        <div id="contenido" data-dashlet="dashlet" class="dashlet-content">
          <div class="bs-docs-example dashlet-container">
            <div id="intercont">
              <button class="btn btn-large btn-primary" style="width:90%; align:left;" id="crear_lead" type="submit" >Crear Lead</button>
            </div>
            <!-- 
            <div id="intercont">
              <button class="btn" style="background:#f7f8f9;width:90%; align:center;" id="asignaCancelados" type="submit" >Asignación a través de cancelados o aplazados</button>
            </div>
            <div id="intercont">
              <button class="btn" style="background:#f7f8f9;width:90%; align:right;" id="clientePerdido" type="submit" >Asignación de cliente perdido</button>
            </div>
            -->
            <div class="btn btn-link disabled span12" id="intercont">
                <span>
                  Tienes {{registros}} registros activos
                </span>
                <p></p>
            </div>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <!-- Comienza modal-->
        <div id="modalRecordsCancel" class="row-fluid" style="display:none">
          <div class="modalDashlet span12" style="width:95%">
            <!-- Modal content -->
            <div class="modal-content">
              <span class="close modalRecordsCancel">&times;</span>
              <h2> &nbsp;&nbsp; Registros Cancelados/Aplazados</h2>
              {{#if registrosAplazados}}
              <table id = "registros" class="dataTable table-striped table-bordered table-fixed" style="table-layout: fixed;">
                <thead>
                  <tr>
                    <th class="span4" style = "width: 400px;">Nombre</th>
                    <th class="span2" style = "width: 10%;">
                      Tipo de registro
                      <!--<i id="orderByAnexo" class="fa fa-unsorted"></i>-->
                    </th>
                    <th class="span2" style = "width: 20%;">
                        Subtipo de registro
                        <!--<i id="orderBySubtipo" class="fa fa-unsorted"></i>-->
                    </th>
                    <th class="span2" style = "width: 10%;">
                        Estatus
                        <!--<i id="orderByStatus" class="fa fa-unsorted"></i>-->
                    </th>
                    <th class="span2" style = "width: 15%;">Acción</th>
                  </tr>
                </thead>
                <tbody>
                {{#each registrosAplazados}}
                  <tr class="row_fluid">
                    <td  class = "nombre" ><p><a href="{{href}}" target="_blank">{{name}}</a></p></td>
                    <td  class="span2" ><font color="#222">{{getUnifinListValue 'tipo_registro_cuenta_list' tipo_registro_c}}</font></td>
                    <td  class="span2" ><font color="#222">{{getUnifinListValue 'subtipo_registro_cuenta_list' subtipo_registro_c}}</font></td>
                    <td  class="span2" ><font color="#222">{{getUnifinListValue 'status_management_list' status_management_c}}</font></td>
                    <td  class="span2" ><button class="btn btnLeadSelect" type="submit" data-id="{{id}}" data-type="{{record}}" data-product="{{idProducto}}">Seleccionar</button></td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
              {{/if}}
            </div><!-- modal content-->
          </div>
        </div><!-- Termina modal-->
      </td>
    </tr>
    <tr>
      <td>
        <!-- Comienza modal Perdido -->
        <div id="modalRecordsLost" class="row-fluid" style="display:none">
          <div class="modalDashlet span12" style="width:95%">
            <!-- Modal content -->
            <div class="modal-content">
              <span class="close modalRecordsLost">&times;</span>
              <h2> &nbsp;&nbsp; Registros Perdidos</h2>
              {{#if registrosPerdidos}}
              <table id = "registros" class="dataTable table-striped table-bordered table-fixed" style="table-layout: fixed; ">
                <thead>
                  <tr>
                      <th class="span4" style = "width: 400px;" >Nombre</th>
                      <th class="span2" style = "width: 10%;">
                        Tipo de registro
                        <!--<i id="orderByAnexo" class="fa fa-unsorted"></i>-->
                      </th>
                      <th class="span2" style = "width: 20%;">
                          Subtipo de registro
                          <!--<i id="orderBySubtipo" class="fa fa-unsorted"></i>-->
                      </th>
                      <th class="span2" style = "width: 10%;">
                        Estatus
                        <!--<i id="orderByStatus" class="fa fa-unsorted"></i>-->
                      </th>
                      <th class="span2" style = "width: 15%;">Acción</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each registrosPerdidos}}
                  <tr class="row_fluid">
                    <td class="nombre"><p><a href="{{href}}" target="_blank">{{name}}</a></p></td>
                    <td class="span2" ><font color="#222">{{getUnifinListValue 'tipo_registro_cuenta_list' tipo_registro_c}}</font></td>
                    <td class="span2" ><font color="#222">{{getUnifinListValue 'subtipo_registro_cuenta_list' subtipo_registro_c}}</font></td>
                    <td class="span2" ><font color="#222">{{getUnifinListValue 'status_management_list' status_management_c}}</font></td>
                    <td class="span2" ><button class="btn btnLeadLostSelect" type="submit" data-id="{{id}}" data-type="{{record}}" data-product="{{idProducto}}">Seleccionar</button></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
              {{/if}}
            </div><!-- modal content-->
          </div>
        </div><!-- Termina modal-->
      </td>
    </tr>
    {{else}}
    <tr>
      <td>
        <div data-dashlet="dashlet" class="dashlet-content" style="padding:20px;">
          <div class="bs-docs-example dashlet-container">
            <div class="row-fluid">
              <div class="span12">
                <p style="text-align:center">
                  Tu perfil no cumple con las condiciones para habilitar Protocolo de Asignación de Leads
                </p>
              </div>
            </div>
            <div class="row-fluid">
              <div class="span12">
                <p style="text-align:center">
                  &nbsp;&nbsp;
                  <span class="span12 label label-info" style="background-color:white;border:1px #c6ddff;color:#29388c">
                    Tienes un total de {{numero_registros}} registros activos
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </td>
    </tr>
    {{/if}}
  </table>
</div>
