<table class="table table-striped table-condensed">
    <tr>
        <th>Activo</th>
        <th>Plazo</th>
        <th>Tasa Mínima</th>
        <th>Tasa Máxima</th>
        <th>VRC Min</th>
        <th>VRC Max</th>
        <th>VRI Min</th>
        <th>VRI Max</th>
        <th>Depósito</th>
        <th>CA Min</th>
        <th>CA Max</th>
        <th>Pago Único Min</th>
        <th>Pago Único Max</th>
        <th>Particular</th>
        <th>Empresarial</th>
        <th>Activo Nuevo</th>
    </tr>
    {{#each oFinanciera.condicion}}
        <tr>
            <td>{{getUnifinListValue 'idactivo_list' idactivo}}</td>
            <td>{{plazo}}</td>
            <td>{{tasa_minima}}</td>
            <td>{{tasa_maxima}}</td>
            <td>{{vrc_minimo}}</td>
            <td>{{vrc_maximo}}</td>
            <td>{{vri_minimo}}</td>
            <td>{{vri_maximo}}</td>
            <!--<td>{{deposito_en_garantia}}</td>-->
			<td style="text-align:center">
                <input type="checkbox"  {{#if deposito_en_garantia}}checked{{/if}} disabled/>
            </td>
            <td>{{comision_minima}}</td>
            <td>{{comision_maxima}}</td>
            <td>{{renta_inicial_minima}}</td>
            <td>{{renta_inicial_maxima}}</td>
            <td style="text-align:center">
                <input type="checkbox" {{#if uso_particular}}checked{{/if}} disabled/>
            </td>
            <td style="text-align:center">
                <input type="checkbox" {{#if uso_empresarial}}checked{{/if}} disabled/>
            </td>
            <td style="text-align:center">
                <input type="checkbox" {{#if activo_nuevo}}checked{{/if}} disabled/>
            </td>
        </tr>
    {{/each}}
</table>
