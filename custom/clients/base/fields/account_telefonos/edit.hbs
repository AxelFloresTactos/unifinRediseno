<script>
    var $selectTelE = this.$('#TelefonosExist').find('select.select2');
    var $selectTelN = this.$('#tabletelefonos').find('select.select2');
    $selectTelE.select2();
    $selectTelN.select2();
</script>
<!--Teléfonos existentes -->
<table id="TelefonosExist" style="width:100%">
  {{#each oTelefonos.telefono}}
    <tr style="border-bottom: 1px solid;   border-color:#cfcfcf;">
      <td>
        <div>
          <!-- Fila 1-->
          <div class="row-fluid" style="margin-top: 10px;">
            <div class="span4 campo1-tel ">
              <label class="record-label">Tipo de Teléfono</label>
              <select class="row-fluid select2 Tipotelefonot updatet" data-field="campo1tel">
                {{#each ../tel_tipo_list}}
                  <option value="{{@key}}" {{ifSelected @key ../tipotelefono}}>{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="span4 campo2-tel">
              <label class="record-label">País</label>
                <select class="row-fluid select2  Paist updatet" data-field="campo2tel">
                  {{#each ../pais_list}}
                    <option value="{{@key}}" {{ifSelected @key ../pais}}>{{this}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="span4 campo3-tel">
              <label class="record-label">Estatus</label>
              <select class="row-fluid select2  Estatust updatet" data-field="campo3tel">
                {{#each ../estatus_list}}
                  <option value="{{@key}}" {{ifSelected @key ../estatus}}>{{this}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <!-- Fila 2-->
          <div class="row-fluid" style="margin-top: 10px;">
            <div class="campo4-tel span4">
              <label class="record-label">Teléfono</label>
              <input type="text" class="Telefonot" placeholder="Teléfono" value="{{telefono}}" data-field="campo4-tel" data-name="Teléfono" maxlength="13" {{#if reus}} disabled {{/if}}/>
              {{#if reus}}<br>
                <label class="lbl_REUS_phone" style="color: red;">REUS: Teléfono registrado en REUS</label>
              {{/if}}
            </div>
            <div class="campo4-tel span4" >
              <label class="record-label">Extensión</label>
              <input type="text" class="Extensiont" placeholder="Extensión" value="{{extension}}" data-field="campo5-tel" data-name="Extensión" maxlength="6" {{#if reus}} disabled {{/if}} />
            </div>
            <div class="whatsapp-tel span1" style="margin: 15px 37px" data-toggle="buttons-checkbox">
                <a href="javascript:void(0)" class="Whatsappt" title="WhatsAppt">
                {{#if whatsapp_c}}
                    <img src="custom/Levementum/images/whatsapp_active.ico">
                {{else}}
                    <img src="custom/Levementum/images/whatsapp_inactive.ico">
                {{/if}}
                </a>
            </div>
            <div class="btn-group" style="margin: 15px 37px">
              <a href="javascript:void(0)" class="btn principal">
                {{#if principal}}
                  <i class="fa fa-star" style="color: #3399FF"></i>
                {{else}}
                  <i class="fa fa-star"></i>
                {{/if}}
              </a>
            </div>
          </div>
        </div>
      </td>
    </tr>
  {{/each}}
</table>

<!-- Nuevo teléfono-->
<h4>
  &nbsp; Nuevo Teléfono
</h4>
<table id="tabletelefonos" style="border: 2px solid lightblue; width: 100%;">
  <tr>
    <td>
      <div>
        <!-- Fila 1 -->
        <div class="row-fluid">
          <div class="span4 campo1-tel ">
            <label class="record-label">Tipo de Teléfono</label>
            <select class="row-fluid select2 newTipotelefono" data-field="campo1tel">
              {{#each tel_tipo_list}}
                <option value="{{@key}}" {{ifSelected @key "1"}}>{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="span4 campo2-tel">
            <label class="record-label">País</label>
            <select class="row-fluid select2  newPais" data-field="campo2tel">
              {{#each pais_list}}
                <option value="{{@key}}" {{ifSelected @key "2"}}>{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="span4 campo3-tel">
            <label class="record-label">Estatus</label>
            <select class="row-fluid select2  newEstatus" data-field="campo3tel">
              {{#each estatus_list}}
                <option value="{{@key}}" {{ifSelected @key "Activo"}}>{{this}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <!-- Fila 2 -->
        <div class="row-fluid" style="margin-top: 10px;">
          <div class="campo4-tel span4">
            <label class="record-label">Teléfono</label>
            <input type="text" class="newTelefono" placeholder="Teléfono" data-field="campo4-tel" data-name="Teléfono" maxlength="13"/>
          </div>
          <div class="campo4-tel span4" >
            <label class="record-label">Extensión</label>
            <input type="text" class="newExtension" placeholder="Extensión" data-field="campo5-tel" data-name="Extensión" maxlength="6"/>
          </div>
          <div class="newwhatsapp-tel span1" style="margin:15px 37px; display:none" data-toggle="buttons-checkbox" id="nuevo">
            <a href="javascript:void(0)" class="newWhatsapp" title="WhatsAppt">
            {{#if newWhatsapp}}
                <img src="custom/Levementum/images/whatsapp_active.ico">
            {{else}}
                <img src="custom/Levementum/images/whatsapp_inactive.ico">
            {{/if}}
            </a>
          </div>
          <div class="btn-toolbar prevent-mousedown span2">
            <div class="btn-group" style="margin: 6px 0px">
              <a href="javascript:void(0)" class="btn addTelefono" rel="tooltip" title="Añadir Teléfono"><i class="fa fa-check"></i></a>
            </div>
          </div>
        </div>
      </div>
    </td>
  </tr>
</table>
