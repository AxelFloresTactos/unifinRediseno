<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tipo Teléfono</th>
      <th>Teléfono</th>
      <th>Extensión</th>
      <th>Estatus</th>
      <th>Llamar</th>
	  <th>WhatsApp</th>
    </tr>
  </thead>
  <tbody>
    {{#each oTelefonos.telefono}}
      <tr>
        <td>{{getUnifinListValue 'tel_tipo_list' tipotelefono}}</td>
        <td>{{telefono}}</td>
        <td>{{extension}}</td>
        <td>{{getUnifinListValue 'tel_estatus_list' estatus}}</td>
        <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
		<td>{{#if whatsapp_c}}<i class="fa fa-check"></i>{{/if}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
