<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tipo Teléfono</th>
      <th>Teléfono</th>
      <th>Extensión</th>
      <th>Estatus</th>
      <th>Llamar</th>
	  <th>WhatsApp</th>
    </tr>
  </thead>
  <tbody>
    {{#each oTelefonos.telefono}}
      <tr>
        <td>
          {{getUnifinListValue 'tel_tipo_list' tipotelefono}}
          {{#if reus}}<br>
            <label class="lbl_REUS_phone" style="color: red;">REUS: Teléfono registrado en REUS</label>
          {{/if}}
        </td>
        <td>{{telefono}}</td>
        <td>{{extension}}</td>
        <td>{{getUnifinListValue 'tel_estatus_list' estatus}}</td>
        {{#if reus}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black;"></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
		    <td>{{#if whatsapp_c}}<i class="fa fa-check"></i>{{/if}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
