<style>
    /* Wrapper para que todo esté en una fila y sea flexible */
    .wrapper {
        display: flex;
        flex-wrap: wrap; /* Permite que los elementos se ajusten si es necesario */
        justify-content: flex-start; /* Alinea los elementos desde el inicio */
        gap: 10px; /* Espacio entre los pasos */
        margin-bottom: 10px;
    }

    /* Recuadros */
    .arrow-steps .step {
        font-size: 12px; /* Reducir tamaño de fuente */
        text-align: center;
        color: #666;
        cursor: default;
        margin: 0 3px;
        padding: 10px 10px 10px 30px;
        min-width: 180px;
        float: left;
        position: relative;
        background-color: #d9e3f7;
        box-sizing: border-box; /* Para que el padding no afecte el tamaño total */
        display: inline-block;
    }    

    /* Flechas y triángulos */
    .arrow-steps .step:after,
    .arrow-steps .step:before {
        content: " ";
        position: absolute;
        top: 0;
        right: -17px;
        width: 0;
        height: 0;
        border-top: 19px solid transparent;
        border-bottom: 19px solid transparent;
        border-left: 17px solid #d9e3f7;
        z-index: 2;
    }

    /* Triángulo blanco */
    .arrow-steps .step:before {
        right: auto;
        left: 0;
        border-left: 17px solid #fff;
        z-index: 0;
    }

    /* Borde primer recuadro */
    .arrow-steps .step:first-child:before {
        border: 0px solid #369;
    }

    /* Primer paso redondeado */
    .arrow-steps .step:first-child {
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    /* Formato Palomita */
    .arrow-steps .step span:before {
        opacity: 0;
        content: "✔";
        position: absolute;
        top: -2px;
        left: -20px;
    }

    /* Estilo Palomita cuando la etapa está completada */
    .arrow-steps .step.done span:before {
        opacity: 1;
        transition: opacity 0.3s ease 0.5s;
    }

    /* Posición Palomas */
    .arrow-steps .step span {
        position: relative;
    }

    /* Estado actual */
    .arrow-steps .step.current {
        color: #fff;
        background-color: #23468c;
    }

    /* Flecha actual */
    .arrow-steps .step.current:after {
        border-left: 18px solid #23468c;
    }

    /* Estado éxito */
    .arrow-steps .step.success {
        color: #fff;
        background-color: #00ab4d;
    }

    /* Flecha de éxito */
    .arrow-steps .step.success:after {
        border-left: 18px solid #00ab4d;
    }

    /* Estado de error */
    .arrow-steps .step.error {
        color: #fff;
        background-color: #e40000;
    }

    /* Flecha de error */
    .arrow-steps .step.error:after {
        border-left: 18px solid #e40000;
    }

    /* Estado oculto (paso no visible) */
    .arrow-steps .step.ocult {
        color: #fff;
        background-color: #ffffff;
    }

    /* Flecha oculta */
    .arrow-steps .step.ocult:after {
        border-left: 18px solid #ffffff;
    }

    /* Estado alerta */
    .arrow-steps .step.alerta {
        color: #fff;
        background-color: #d8d74b;
    }

    /* Flecha alerta */
    .arrow-steps .step.alerta:after {
        border-left: 18px solid #d8d74b;
    }

    /* Ajustes para pantallas pequeñas */
    @media screen and (max-width: 768px) {
        .arrow-steps .step {
            font-size: 10px; /* Reducir aún más el tamaño de la fuente */
            padding: 6px 6px 6px 20px; /* Reducir padding */
            min-width: 120px; /* Ajustar ancho */
        }

        .arrow-steps .step:after,
        .arrow-steps .step:before {
            border-top: 8px solid transparent;
            border-bottom: 8px solid transparent;
            border-left: 8px solid #d9e3f7;
        }

        /* Flexbox para los pasos ocultos */
        .arrow-steps .step.ocult {
            display: block;
            min-width: auto; /* Permitir que los pasos ocultos se ajusten */
        }
    }
</style>

<div class="wrapper">
