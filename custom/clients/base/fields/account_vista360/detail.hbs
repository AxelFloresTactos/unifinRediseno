<link rel="stylesheet" href="custom/clients/base/fields/account_vista360/account_vista360.css">
<div id="cards-properties">
    <div id="cards-container" class="row-fluid" style="background-color:#E6E7E9">
        <div class="span2"></div>
        <!-- DIV sección General-->
        <div class="span4 card-container">
            <div id="title-general" class="title-container" style="width: 100%;height: 15%;border-top-left-radius: 10px;border-top-right-radius: 10px;">
                <p style="color:#ffffff;text-align: center;padding:7px"><b>GENERAL</b></p>
            </div>
            <div class="information-container">
                <div class="information-general-container">
                    <table class="table table-borderless" style="font-size:10px;color:#021741">
                        <thead>
                            <tr>
                                <td><strong>Tipo</strong></td>
                                <td>{{ResumenCliente.general_cliente.tipo}}</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Cliente desde</strong></td>
                                <td>{{ResumenCliente.general_cliente.cliente_desde}}</td>
                            </tr>
                            <tr>
                            <tr>
                                <td><strong>Grupo Empresarial</strong>&nbsp;&nbsp;<i class="fa fa-eye fa-md gpoEmpresarial"></i></td>
                                <td>{{ResumenCliente.general_cliente.grupo_empresarial}}</td>
                            </tr>
                            <tr>
                                <td><strong>Productos Contratados</strong></td>
                                <td>{{ResumenCliente.general_cliente.productos_contratados}}</td>
                            </tr>
                            <tr>
                                <td><strong>Actividad Económica</strong></td>
                                <td>{{ResumenCliente.general_cliente.actividad_economica}}</td>
                            </tr>
                            <tr>
                                <td><strong>Ventas Anuales</strong></td>
                                <td>$ {{customFormatNumber ResumenCliente.general_cliente.ventas_anuales}}</td>
                            </tr>
                            <tr>
                                <td><strong>Año de ventas anuales</strong></td>
                                <td>{{ResumenCliente.general_cliente.anio_ventas_anuales}}</td>
                            </tr>
                            <tr>
                                <td><strong>Fecha Constitutiva/Nacimiento</strong></td>
                                <td>{{ResumenCliente.general_cliente.fecha_cons_nac}}</td>
                            </tr>
                            <tr>
                                <td><strong>Score Crédito</strong></td>
                                <td>{{ResumenCliente.general_cliente.score_credito}}</td>
                            </tr>
                            <tr>
                                <td><strong>Status Cobranza</strong></td>
                                <td>{{ResumenCliente.general_cliente.score_credito}}</td>
                            </tr>
                            <tr>
                                <td><strong>Núm de Empleados</strong></td>
                                <td>{{ResumenCliente.general_cliente.num_empleados}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- DIV sección Contacto-->
        <div class="span4 card-container">
            <div id="title-general" class="title-container" style="background-color:#17B7ED;width: 100%;height: 15%;border-top-left-radius: 10px;border-top-right-radius: 10px;">
                <p style="color:#ffffff;text-align: center;padding:7px"><b>CONTACTOS</b>
                <button class="btn btnAddContact" type="button" style="border-radius: 20%;"><i class="fa fa-user" style="color: #021741"></i>Agregar Contacto</button>
                </p>
            </div>
            <div class="information-container">
                <div style="text-align: center;">
                    <p style="font-size: 10px;padding:8px">
                        <b>CONTACTO DE NEGOCIOS</b>
                    </p>
                </div>
                <div class="information-contacts-container">
                    <table class="table-borderless" style="font-size:10px;color:#021741;width:100%;margin-bottom:10px">
                        <thead>
                            <tr height="20px">
                                <td><strong style="padding:8px">Nombre</strong></td>
                                <td>{{ResumenCliente.contactos.nombre_negocios}}</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr height="20px">
                                <td><strong style="padding:8px">Puesto</strong></td>
                                <td>{{ResumenCliente.contactos.puesto_negocios}}</td>
                            </tr>
                            <tr>
                            <tr style="background-color:#C0BEC1" height="20px">
                                <td><strong style="padding:8px">Teléfono Principal</strong></td>
                                <td>{{ResumenCliente.contactos.telefono_negocios}}&nbsp;{{#if ResumenCliente.contactos.telefono_negocios}}<i class="fa fa-phone fa-md addCall" data-telefono="{{ResumenCliente.contactos.telefono_negocios}}" data-nombre="{{ResumenCliente.contactos.nombre_negocios}}" data-id-nombre="{{ResumenCliente.contactos.id_nombre_negocios}}" tabindex="-1"></i>&nbsp;<strong>Llamar</strong>{{/if}}</td>
                            </tr>
                            <tr style="background-color:#C0BEC1" height="20px">
                                <td><strong style="padding:8px">Correo Electrónico</strong></td>
                                <td>{{ResumenCliente.contactos.correo_negocios}}&nbsp;&nbsp;{{#if ResumenCliente.contactos.correo_negocios}}<i class="fa fa-envelope fa-md sendEmail" tabindex="-1"></i>{{/if}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align: center;">
                        <button class="btnNuevaReunion" data-id="{{ResumenCliente.contactos.id_nombre_negocios}}" data-name="{{ResumenCliente.contactos.nombre_negocios}}" data-type="negocios" type="button" style="width:50%;font-size:10px;border-radius: 30%;background-color: #021741;color: white;box-shadow: 0 5px 5px #888888;transition: color 0.3s, background-image 0.5s, ease-in-out;">
                                Click aquí para <br>agendar reunión <i class="fa fa-users" style="color: #ffff"></i>
                        </button>
                    </div>
                </div>

                <div style="margin-top:8px">
                    <div style="text-align: center;">
                        <p style="font-size: 10px;padding:8px">
                            <b>CONTACTO SECUNDARIO</b>
                        </p>
                    </div>
                    <div class="information-contacts-container">
                        <table class="table-borderless" style="font-size:10px;color:#021741;width:100%;margin-bottom:10px">
                            <thead>
                                <tr height="20px">
                                    <td><strong style="padding:8px">Nombre</strong></td>
                                    <td>{{ResumenCliente.contactos.nombre_secundario}}</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr height="20px">
                                    <td><strong style="padding:8px">Puesto</strong></td>
                                    <td>{{ResumenCliente.contactos.puesto_secundario}}</td>
                                </tr>
                                <tr>
                                <tr style="background-color:#C0BEC1" height="20px">
                                    <td><strong style="padding:8px">Teléfono Principal</strong></td>
                                    <td>{{ResumenCliente.contactos.telefono_secundario}}&nbsp;{{#if ResumenCliente.contactos.telefono_secundario}}<i class="fa fa-phone fa-md addCall" data-telefono="{{ResumenCliente.contactos.telefono_secundario}}" data-nombre="{{ResumenCliente.contactos.nombre_secundario}}" data-id-nombre="{{ResumenCliente.contactos.id_nombre_secundario}}" tabindex="-1"></i>&nbsp;<strong>Llamar</strong>{{/if}}</td>
                                </tr>
                                <tr style="background-color:#C0BEC1" height="20px">
                                    <td><strong style="padding:8px">Correo Electrónico</strong></td>
                                    <td>{{ResumenCliente.contactos.correo_secundario}}&nbsp;&nbsp;{{#if ResumenCliente.contactos.correo_secundario}}<i class="fa fa-envelope fa-md sendEmail" data-nombre="{{ResumenCliente.contactos.nombre_secundario}}" data-id-nombre="{{ResumenCliente.contactos.id_nombre_secundario}}" tabindex="-1"></i>{{/if}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="text-align: center;">
                            <button class="btnNuevaReunion" data-id="{{ResumenCliente.contactos.id_nombre_secundario}}" data-name="{{ResumenCliente.contactos.nombre_secundario}}" data-type="secundario" type="button" style="width:50%;font-size:10px;border-radius: 30%;background-color: #021741;color: white;box-shadow: 0 5px 5px #888888;transition: color 0.3s, background-image 0.5s, ease-in-out;margin-bottom:8px">
                                    Click aquí para <br>agendar reunión <i class="fa fa-users" style="color: #ffff"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="span2"></div>
    </div>

    <!-- Comienza nueva sección productos -->
    <div id="cards-container_division" class="row-fluid divProductos">
      PRODUCTOS
    </div>
    <!-- Tarjetas de productos -->
    <div id="cards-container_products" class="row-fluid" style="background-color:#C0BEC1">
        <!-- DIV Producto Leasing-->
        {{#if ResumenCliente.leasing.muestra_producto}}
            <div class="span4 card-container">
                <!-- Título producto -->
                <div class="divInline">
                	  <!-- Icono -->
                	  <div class="contenedorIcono">
                		    <img src="{{getUnifinListValue 'iconos_vista360_list' 'leasing'}}" style="height: 50px; width: 50px;">
                    </div>
                	  <!-- Nombre producto -->
                  	<div class="contenedorTitulo">
                     	  <div class="formatoTitulo">
                      		  LEASING
                      	</div>
                  	</div>
                </div>
                <!-- Detalle del producto -->
                <div class="information-container">
                    <!-- Detalle -->
                    <div class="information-general-container">
                        <table style="font-size:10px;color:#021741">
                            <tbody>
                                <!-- Historial de contactos -->
                                <tr class="formatoFilaG">
                                    <td colspan="2"><strong><center>HISTORIAL DE CONTACTO</center></strong></td>
                                </tr>
                                <tr class="formatoFilaA"  style="border-bottom-style: solid; border-color: white;">
                                    <td style="width:40%;"><strong>Última cita</strong></td>
                                    <td>{{ResumenCliente.leasing.ultima_cita}}</td>
                                </tr>
                                <tr class="formatoFilaA">
                                    <td><strong>Última llamada</strong></td>
                                    <td>{{ResumenCliente.leasing.ultima_llamada}}</td>
                                </tr>
                                <!-- Detalle -->
                                <tr>
                                    <td><strong>Estatus de atención</strong></td>
                                    <td> {{getUnifinListValue 'product_status_atencion_list' ResumenCliente.leasing.estatus_atencion}}</td>
                                </tr>
                                {{#if ResumenCliente.leasing.tiene_linea_autorizadda}}
                                    <tr>
                                        <td><strong>Estatus del producto</strong></td>
                                        <td>{{ResumenCliente.leasing.estatusxproducto}}</td>
                                    </tr>
                                {{/if}}
                                <tr>
                                    <td><strong>Tipo de cuenta</strong></td>
                                    <td>
                                        {{getUnifinListValue 'tipo_registro_cuenta_list' ResumenCliente.leasing.tipo_cuenta}}
                                        {{getUnifinListValue 'subtipo_registro_cuenta_list' ResumenCliente.leasing.subtipo_cuenta}}
                                    </td>
                                </tr>
                                {{#if ResumenCliente.leasing.tiene_linea_autorizadda}}
                                    <tr class="formatoFilaG">
                                        <td><strong>Línea autorizada</strong></td>
                                        <td>$ {{customFormatNumber ResumenCliente.leasing.linea_autorizada}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fecha de vencimiento de la línea</strong></td>
                                        <td>{{ResumenCliente.leasing.fecha_vencimiento}}</td>
                                    </tr>
                                    <tr class="formatoFilaG">
                                        <td><strong>Línea disponible</strong></td>
                                        <td>$ {{customFormatNumber ResumenCliente.leasing.linea_disponible}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Estatus de la línea</strong></td>
                                        <td>{{ResumenCliente.leasing.estatus_linea}}</td>
                                    </tr>
                                {{/if}}
                                {{#if ResumenCliente.leasing.tiene_anexo_liberado}}
                                    <tr>
                                        <td><strong>Vencimiento anexo final</strong></td>
                                        <td>{{ResumenCliente.leasing.vencimiento_anexo_final}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Vencimiento siguiente anexo</strong></td>
                                        <td>{{ResumenCliente.leasing.vencimiento_siguiente_anexo}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Próxima mensualidad</strong></td>
                                        <td>{{ResumenCliente.leasing.fecha_proximo_pago}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Mensualidad activa</strong></td>
                                        <td>{{ResumenCliente.leasing.mensualidad_activa}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Días de atraso</strong></td>
                                        <td>{{ResumenCliente.leasing.dias_atraso}}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cobranza</strong></td>
                                        <td>{{ResumenCliente.leasing.cobranza}}</td>
                                    </tr>
                                {{/if}}
                                <tr>
                                    <td><strong>Asesor</strong></td>
                                    <td>{{ResumenCliente.leasing.promotor}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Preview de Anexos -->
                        {{#if ResumenCliente.leasing.tiene_anexo_liberado}}
                            <div class="row-fluid">
                                  <div id="openAnexos" class="span6 openModalAnexos divAnexos">
                                      <div class="row-fluid" style="background-color: #555">
                                        <div class="span7" style="text-align:right;" >
                                          <strong>{{ResumenCliente.leasing.anexos_activos}}</strong>
                                        </div>
                                        <div class="span5" style="text-align:right;">
                                          <i class="fa fa-eye" style="color:white"></i>
                                        </div>
                                      </div>
                                      Anexos activos
                                  </div>
                                  <div id="openAnexos" class="span6 openModalAnexos divAnexos">
                                      <div class="row-fluid" style="background-color: #555">
                                        <div class="span7" style="text-align:right;" >
                                          <strong>{{ResumenCliente.leasing.anexos_historicos}}</strong>
                                        </div>
                                        <div class="span5" style="text-align:right;">
                                          <i class="fa fa-eye" style="color:white"></i>
                                        </div>
                                      </div>
                                      Anexos históricos
                                  </div>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
          {{/if}}
      </div>
</div>
<!-- Sección para modales -->
<div id="modalGpoEmpresarial" class="row-fluid" style="display:none">
  <div class="modal span12" style="width:65%;height:800px">
    <!-- Modal content -->
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <span class="close closeModalGpoEmpresarial">&times;</span>
        <h2> &nbsp;&nbsp; Grupo Empresarial</h2>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
          <div class="row-fluid" style="color:gray;">
            <div class="span4"> </div>
            <div class="span4"> {{ResumenCliente.general_cliente.situacion_grupo_empresarial}}</div>
            <div class="span4"> </div>
          </div>
          <br>
      </div>
    </div>
  </div>
</div>
