<!-- Campo para desplegar Objetivos en minuta:Edición -->
<div style="border: 2px solid #055993;border-radius: 12px;padding:10px;">
  <!-- Table list-->
  <div class="list-view">
    <table id="tableResult" class="table table-striped span12">
        <thead>
            <tr bgcolor="#0679c8" style="color:#fff">
                <th width="100%" style="background-color:#0679c8;color:#fff;padding:10px">Objetivo</th>
                {{!-- <th width="20%" style="text-align:center;background-color:#0679c8;color:#fff;padding:10px">&nbsp;</th> --}}
            </tr>
        </thead>
        <tbody>
          {{#each myobject.records}}
            <tr>
                <td class="objetivoSelect" width="80%">
                  <input type="text" class="objetivoSelect span10" value="{{name}}">
                </td>
                <td class="objetivoSelect" width="20%">
                  <button type="button" class="deleteRecord">
                    <i class="sicon sicon-minus"></i>
                  </button>
                </td>
            </tr>
          {{/each}}
        </tbody>
    </table>
  </div>
  <div id="input">
    <!-- Contenid Línea n -->
    <div class="row-fluid">
      <div class="span10">
        <input type="text" class="newCampo1 span10" placeholder="Nuevo Objetivo">
      </div>
      <div class="span2">
        <a class="btn addRecord">
          <i class="sicon sicon-plus"></i>
        </a>
      </div>
    </div>
  </div>
</div>
{{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
