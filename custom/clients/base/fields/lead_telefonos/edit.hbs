<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tipo Teléfono</th>
      <th>Teléfono</th>
      <th>Llamar</th>
      <th>Estatus Reus</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td>TELEFONO TRABAJO</td>
		<td><input type="text" class="Telefonot" placeholder="Teléfono Trabajo" value="{{phone_work}}" data-field="phone_work" data-name="phone_work" maxlength="13" {{#if o_registro_reus_c}} disabled {{/if}}/></td>
        {{#if o_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if o_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
		{{/if}}
    </tr>
    <tr>
        <td>TELEFONO CASA</td>
		<td><input type="text" class="Telefonoc" placeholder="Teléfono Casa" value="{{phone_home}}" data-field="phone_home" data-name="phone_home" maxlength="13" {{#if c_registro_reus_c}} disabled {{/if}}/></td>
        {{#if c_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if c_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
        {{/if}}
    </tr>
    <tr>
        <td>TELEFONO CELULAR</td>
		<td><input type="text" class="Telefonom" placeholder="Teléfono Celular" value="{{phone_mobile}}" data-field="phone_mobile" data-name="phone_mobile" maxlength="13" {{#if m_registro_reus_c}} disabled {{/if}}/></td>
        {{#if m_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if m_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
        {{/if}}
    </tr>
  </tbody>
</table>
