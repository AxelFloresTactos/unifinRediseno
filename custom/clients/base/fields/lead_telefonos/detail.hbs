<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tipo Teléfono</th>
      <th>Teléfono</th>
      <th>Llamar</th>
      <th>Estatus Reus</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td>TELEFONO TRABAJO</td>
		<td>{{phone_work}}</td>
        {{#if o_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if o_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
		{{/if}}
    </tr>
    <tr>
        <td>TELEFONO CASA</td>
		<td>{{phone_home}}</td>
        {{#if c_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if c_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
        {{/if}}
    </tr>
    <tr>
        <td>TELEFONO CELULAR</td>
		<td>{{phone_mobile}}</td>
        {{#if m_registro_reus_c}}
          <td align="center"><button class="mcall fa fa-phone btn-danger" style="color: black; pointer-events:none;" disabled></button></td>
        {{else}}
          <td align="center"><button class="mcall fa fa-phone btn-success" style="color: white;"></button></td>
        {{/if}}
        {{#if m_registro_reus_c}}
          <td>Registrado en Reus</td>
		{{else}}
		  <td></td>
        {{/if}}
    </tr>
  </tbody>
</table>
