<div class="control-group email">
    {{#if opt_out}}
    <input type="text" class="existingAddress" {{#if max_length}} maxlength="{{max_length}}"{{/if}} placeholder="{{str "LBL_EMAIL_TITLE"}}" value="{{email_address}}" disabled>
    {{else}}
    <input type="text" class="existingAddress" {{#if max_length}} maxlength="{{max_length}}"{{/if}} placeholder="{{str "LBL_EMAIL_TITLE"}}" value="{{email_address}}">
    {{/if}}
    <div class="btn-toolbar prevent-mousedown" style="display:flex;">
        <div class="btn-group" data-toggle="buttons-checkbox">
            <button type="button" class="{{#if primary_address}}active {{/if}}is_primary btn btn-edit" data-emailproperty="primary_address" rel="tooltip" title="{{str "LBL_EMAIL_PRIMARY"}}"><i class="fa fa-star"></i></button>
            {{#if opt_out}}
            <button type="button" class="{{#if opt_out}}active {{/if}}btn btn-edit" data-emailproperty="opt_out" rel="tooltip" title="{{str "LBL_EMAIL_OPT_OUT"}}" style="pointer-events:none;" disabled><i class="fa fa-ban"></i></button>
            <button type="button" class="{{#if invalid_email}}active {{/if}}btn btn-edit" rel="tooltip" data-emailproperty="invalid_email" title="{{str "LBL_EMAIL_INVALID"}}" style="pointer-events:none;" disabled><i class="fa fa-exclamation-circle"></i></button><label style="color:red;padding-left:5px;">Correo registrado en REUS</label>
            {{else}}
            <button type="button" class="{{#if opt_out}}active {{/if}}btn btn-edit" data-emailproperty="opt_out" rel="tooltip" title="{{str "LBL_EMAIL_OPT_OUT"}}" style="pointer-events:none;" disabled><i class="fa fa-ban"></i></button>
            <button type="button" class="{{#if invalid_email}}active {{/if}}btn btn-edit" rel="tooltip" data-emailproperty="invalid_email" title="{{str "LBL_EMAIL_INVALID"}}" style="pointer-events:none;" disabled><i class="fa fa-exclamation-circle"></i></button>
            {{/if}}   
        </div>
        <div class="btn-group prevent-mousedown">
            <a href="javascript:void(0)" class="btn removeEmail" rel="tooltip" title="{{str "LBL_REMOVE"}}"><i class="fa fa-minus"></i></a>
        </div>
    </div>
</div>
