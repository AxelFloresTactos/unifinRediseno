      <input type="number" class="newporcentaje" placeholder="Porcenteje Aplicado" data-field="porcentaje" style="width: 95%;margin: 4px;display: inline-block;">
      <div class="btn-toolbar prevent-mousedown">
         <div class="btn-group">
            <a href="javascript:void(0)" class="btn addcomision"><i class="fa fa-check"></i></a>
         </div>
      </div>
  </div>
</div>
