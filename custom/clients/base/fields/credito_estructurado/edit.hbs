<div style="border: 2px solid #055993;border-radius: 12px;padding:10px;">
<!--Cabecera-->
  <div>
  <table id="tableResult" class="table table-striped">
      <thead>
          <tr bgcolor="#0679c8" style="color:#fff">
              <th width="50%">Nombre Condici贸n</th>
              <th width="50%">Porcentaje Aplicado</th>
          </tr>
      </thead>
  </table>
  </div>
<!--Detalle-->
  <div>
      {{#each myData3.records}}
        <div class="control-group comisiones" style="display: flex;flex-direction: row;align-items: flex-start" >
          <input type="text" class="loadedcomision" value="{{name}}" style="width: 95%;margin: 4px;display: inline-block;">
