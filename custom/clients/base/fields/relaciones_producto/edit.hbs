<style>
  .encabezado {
    background-color:  #21618C;
    color:white
  }

  .tborder {
    border: #21618C 2px solid;
    border-radius: 5px 5px 5px 5px;
    padding-top: 7px;
    padding-right: 5px;
    padding-left: 5px;
    display: inline-block;
    width: 100%;
    box-sizing: border-box;
  }

</style>
<script>
  var $select = $('select.select2');
  $select.select2({
    width: '100%',
    minimumResultsForSearch: 7,
    closeOnSelect: false,
    containerCssClass: 'select2-choices-pills-close'
  });
</script>

<div class="tborder">
  <table class="table table-striped table-condensed span12">
    <thead>
      <tr>
        <th class="encabezado">Relaci√≥n</th>
        <th class="encabezado">Tipo de Producto</th>
		    <th class="encabezado">Negocio</th>
        <th class="encabezado">Producto Financiero</th>
      </tr>
    </thead>
    <tbody>
      {{#each productoSeleccionado}}
      <tr>
        <td>{{getUnifinListValue 'relaciones_producto_list' rel}}</td>
        <td>
          <select class="select2 row-fluid producto_list" multiple="multiple" size="3" style="width: 100%"
            data-field="producto_list">
              {{#each ../tipo_producto_list}}
                  <option value="{{@key}}" {{ifMSelected @key ../prod}}>{{this}}</option>
            {{/each}}
          </select>
        </td>
        <td>
          <select class="select2 row-fluid negocio_list" multiple="multiple" size="3" style="width: 100%"
            data-field="negocio_list">
              {{#each negocioList}}
                  <option value="{{@key}}" {{ifMSelected @key ../neg}}>{{this}}</option>
            {{/each}}
          </select>
        </td>
        <td>
          <select class="select2 row-fluid financiero_list" multiple="multiple" size="3" style="width: 100%"
            data-field="financiero_list">
              {{#each productoFncroList}}
                  <option value="{{@key}}" {{ifMSelected @key ../fncro}}>{{this}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>